{
    "compilerOptions": {
        "target":
            "es5" /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', or 'ESNEXT'. */,
        "outDir": "./build" /* Redirect output structure to the directory. */,
        "rootDir":
            "./src" /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */,
        "removeComments": true /* Do not emit comments to output. */,
        "strict": true /* Enable all strict type-checking options. */,
        "noImplicitAny": true /* Raise error on expressions and declarations with an implied 'any' type. */,
        "moduleResolution":
            "node" /* Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6). */,
        "jsx": "preserve",
        "module": "esnext",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "noStrictGenericChecks": true,
        "forceConsistentCasingInFileNames": true,
        "suppressExcessPropertyErrors": true,
        "noErrorTruncation": true,
        "noUnusedLocals": false,
        "baseUrl": "./src",
        "lib": [
            "dom",
            "es5",
            "es2015.core",
            "es2015.collection",
            "es2015.iterable",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "es2015.promise",
            "scripthost",
            "es2016.array.include",
            "esnext.asynciterable",
            "es2017.object"
        ],
        "skipLibCheck": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "include": ["./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.scss"],
    "exclude": ["node_modules", "webpack", "public", "build"]
}
